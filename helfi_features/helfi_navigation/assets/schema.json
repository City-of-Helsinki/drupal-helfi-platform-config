{
  "title": "Menu tree",
  "description": "A JSON representation of a Drupal menu tree",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "project": {
        "type": "string"
      },
      "site_name": {
        "type": "string"
      },
      "changed": {
        "type": "string"
      },
      "menu_tree": {
        "type": "object",
        "items": {"$ref": "#/$defs/tree"},
        "minimum": 1
      },
      "weight": {
        "type": "integer"
      },
      "lang_code": {
        "type": "string"
      }
    },
    "required": ["project", "site_name", "menu_tree", "weight", "lang_code"]
  },
  "$defs": {
    "tree": {
      "type": "array",
      "required": ["id", "name", "url"],
      "properties": {
        "description": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "sub_tree": {
          "type": "array",
          "items": {"$ref": "#/$defs/tree"}
        },
        "external": {
          "type": "boolean"
        },
        "weight": {
          "type": "integer",
          "default": 0
        }
      }
    }
  }
}
