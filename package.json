{
  "name": "hdbt_platform_config",
  "description": "Asset builder configuration for helfi_platform_config",
  "author": "Druid",
  "license": "MIT",
  "repository": "github:City-of-Helsinki/drupal-helfi-platform-config",
  "scripts": {
    "dev": "node theme-builder.mjs --watch --dev",
    "build": "npm run format:js --loglevel=silent && npm run lint --loglevel=silent && node theme-builder.mjs",
    "preinstall": "npx update-browserslist-db@latest",
    "postinstall": "npm --prefix ../../../themes/contrib/hdbt install --no-audit --progress=false --loglevel=silent",
    "lint:js": "biome lint assets/js/",
    "format:js": "biome format --write assets/js/",
    "lint": "npm-run-all --parallel lint:js -s"
  },
  "dependencies": {
    "@biomejs/biome": "^2.2.4",
    "@drupal/autocomplete": "^0.0.2",
    "@hdbt/theme-builder": "file:../../../themes/contrib/hdbt/theme-builder",
    "npm-run-all2": "^8.0.4"
  },
  "browserslist": [
    "last 3 major versions",
    "> 1%",
    "not dead"
  ]
}
